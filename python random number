from flask import Flask, render_template, random
app = Flask(__name__)

@app.route('/')
def mainIndex( ):
  
  random1 = random.randrange(1,10+1)
  random2 = random.randrange(1,10+1)
  random3 = random.randrange(1,10+1)
  
  db = utils.db_connect()
  cur = db.cursor()
    
  cur.execute('select word from table1 WHERE number = '+ random1')
  cur.execute('select word from table2 WHERE number = '+ random2')
  cur.execute('select word from table3 WHERE number = '+ random3')            
  rows = cur.fetchall()
    
  return render_template('index.html', posts=rows)
